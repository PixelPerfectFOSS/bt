{
    "id": "otm",
    "name": "OTM",
    
    "type": "html",
    
    "dist": {
        "format": "zip",
        "maxSize": 10240
    },
    
    "requiredFiles": ["index.html"],
    "allowedFiles": ["*.html", "*.htm", "*.js", "*.css", "*.jpg", "*.jpeg", "*.gif", "*.png", "*.json", "*.xml", "*.svg", "*.eot", "*.otf", "*.ttf", "*.woff", "*.woff2", "*.webp", "*.tte"],
    
    "maxFilesNum": 40,
    
    "indexFile": "index.html",
    
    "externalLinks": true,
    "externalLinksDomain": "s0.2mdn.net",
    
    "animation": {
        "duration": 30
    },
    
    "fallback": {
        "required": true,
        "maxSize": 10240,
        "formats": ["gif", "png", "jpg"]
    },
    
    "tags": {
        "head": [
            {
                "tag": "meta",
                "attributes": {
                    "name": "ad.size",
                    "content": "width={{banner.width}},height={{banner.height}}"
                }
            },
            {
                "tag": "script",
                "attributes": {
                    "type": "text/javascript"
                },
                "text": " var clickTag = \"https://google.com\"; "
            }
        ],
        "body": []
    },
    
    "attributes": {
        "#link": {
            "target": null,
            "href": "javascript:void(window.open(window.clickTag))",
            "style": "z-index: 9999999;"
        },
        "#container": {
            "aria-hidden": "true"
        }
    },
    
    "ids": {},
    
    "inlineFiles": false,
    "minify": true,
    
    "browsers": {
        "chrome": 14,
        "firefox": 14,
        "safari": 5,
        "ie": 9,
        "opera": 14,
        "yandex": 14,
        "edge": 0
    }
}
